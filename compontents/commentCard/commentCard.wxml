<view class="cu-card dynamic {{isCard?'no-card':''}} " >
  <view class="cu-item shadow ">
    <view class="cu-list menu-avatar">
            <view class="cu-item">
                 <view class="cu-avatar round lg" style="background-image:url({{comment.avatar_url}});"></view>
                 <view class="content flex-sub">
                     <view class="name">{{comment.nick_name}}</view>
                     <view class="text-gray text-sm flex justify-between">
                     {{comment.date}} {{comment.time}}
                     </view>
                </view>
          <view class="ping" wx:if="{{card}}">
          评论{{comment.resName}}
           </view>
           <view > <star score="{{comment.score}}"></star></view>
        </view>
        
       <!-- <view style='text-align:center;width:120rpx;'>
            <block wx:if='{{comment.stars>0}}'> 
                <block wx:for='{{comment.stars-0}}' wx:key='un'>
                   <image class='star_img' style='height:30rpx;width:30rpx;' src='/images/star/star_full.png'></image>
                </block>
             </block>
        </view>
        -->
        <star score="{{2*comment.stars}}"></star>
           
    </view>
    <view class="text-content des">
      {{comment.comment}}
    </view>
    <view class="text-gray text-sm text-right padding">
      <image src="../../images/zan.png"  class="iconI"/> {{comment.approve_num}}
       <image src="../../images/cai.png" class="iconI"/> {{comment.oppose_num}}
    </view>

</view>
</view>